{
  "extends": "tslint:recommended",
  "rules": {
    "arrow-parens": false,
    "space-before-function-paren": [true, "always"],
    "semicolon": [
      true,
      "never"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "quotemark": [
      true,
      "avoid-escape"
    ],
    "curly": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-classes-per-file": [
      true,
      10
    ],
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "indent": [
      true,
      "spaces"
    ]
  },
  "jsRules": {
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ]
  }
}
